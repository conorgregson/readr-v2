generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // URL comes from prisma.config.ts (DATABASE_URL)
}

enum BookStatus {
  PLANNED
  READING
  FINISHED
  ABANDONED
}

model Book {
  id          String      @id @default(cuid())
  title       String
  author      String?
  genre       String?
  status      BookStatus  @default(PLANNED)

  pageCount   Int?
  currentPage Int?        @default(0)

  sessions    Session[]

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([status])
  @@index([title])
}

model Session {
  id        String   @id @default(cuid())
  bookId    String
  book      Book     @relation(fields: [bookId], references: [id])

  minutes   Int
  notes     String?

  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([bookId])
  @@index([date])
}
