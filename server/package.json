{
  "name": "readr-v2-server",
  "version": "2.0.0",
  "main": "dist/index.js",
  "license": "CC-BY-NC-4.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",

    "build": "tsc",
    "start": "node dist/index.js",
    "start:ci": "node dist/index.js",

    "typecheck": "tsc --noEmit",
    "test": "echo \"No server tests defined yet\" && exit 0",

    "prisma": "prisma",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",

    "test:api": "newman run postman/Readr-v2-API.postman_collection.json -e postman/Readr-v2-Local.postman_environment.json --color on",
    "test:api:html": "newman run postman/Readr-v2-API.postman_collection.json -e postman/Readr-v2-Local.postman_environment.json --reporters cli,htmlextra --reporter-htmlextra-export postman/reports/api-report.html --color on",

    "prestart:api:ci": "kill-port 4000 || true",
    "test:api:ci": "npm run build && npm run prestart:ci && start-server-and-test \"npm run start:ci\" http://localhost:4000/health \"npm run test:api\""
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "cors": "^2.8.5",
    "express": "^4.19.0",
    "helmet": "^7.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/node": "^22.19.2",
    "kill-port": "^2.0.1",
    "newman": "^6.2.1",
    "newman-reporter-htmlextra": "^1.23.1",
    "prisma": "^7.1.0",
    "start-server-and-test": "^2.1.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.0",
    "wait-on": "^9.0.3"
  },
  "prisma": {
    "seed": "ts-node-dev --transpile-only prisma/seed.ts"
  }
}
